<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_course_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Code"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_course_code"
            android:layout_marginTop="8dp"
            android:text="Course Name"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/text_course_credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_course_name"
            android:layout_marginTop="8dp"
            android:text="Course Credits"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/button_add_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_course_credits"
            android:layout_marginTop="16dp"
            android:text="Add Course"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
